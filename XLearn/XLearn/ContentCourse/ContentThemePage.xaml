             x:Class="XLearn.ContentCourse.ContentThemePage"
             xmlns:element ="clr-namespace:XLearn.ContentCourse">

    <NavigationPage.TitleView>
        <Label x:Name="TitleView" 
               Style="{StaticResource HeaderText}" 
               Text="Список підрозділів">
        </Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="containerSubtheme" 
                         Padding="10"
                         Spacing="5">
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>